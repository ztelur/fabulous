*
  margin 0
  padding 0

body
  background #fff
  color color-font
  font: 14px 'Source Sans Pro', 'Helvetica Neue', 'Arial', 'sans-serif', "Microsoft Yahei";
  font-size: 16px
  text-shadow 0 0 1px transparent
  -webkit-text-size-adjust 100%
  height 100%

h1, h2, h3, h4, h5, h6
  font-family font-title

h1
  font-size 1.8em

h2
  font-size 1.5em

h3
  font-size 1.3em

a
  text-decoration none
  color color-link
  &:hover
    text-decoration underline

.alignleft
  float left

.alignright
  float right

.clearfix
  clearfix()

