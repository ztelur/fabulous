<% if (site.tags.length){ %>
<div class="widget-wrap mdl-shadow--2dp">
  <h3 class="title"><%= __('tagcloud') %></h3>
  <div class="widget tagcloud">
    <% site.tags.sort('name').each(function(item){ %>
      <a href="<%- config.root %><%- item.path %>"><%= item.name %></a>
    <% }); %>
  </div>
</div>
<% } %>
